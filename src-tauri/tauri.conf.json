{
  "package": {
    "productName": "Serenity Editor",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "",
    "beforeBuildCommand": "vite build --mode tauri"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.serenity.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "The lightest rich text editor you will ever find",
      "longDescription": "Serenity Editor is an ultra light rich text editor that has a beautiful interface, support for markdown, built in syntax highlighting, and more.",
      "deb": {
        "depends": [],
        "useBootstrapper": false
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "useBootstrapper": false,
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": ["https://github.com/asyncbanana/Serenity-Editor/update.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNERTdGNjRDNjlEM0JDRjMKUldUenZOTnBUUGJuUGNsYnEwR3VKVm0xMmtxTm44UCttcnJ0NzBKQmlvUE1zbU55K2EwMU1ZcjMK"
    },
    "allowlist": {
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "readTextFile": true,
        "writeFile": true
      }
    },
    "windows": [
      {
        "title": "Serenity Editor",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    }
  }
}
